<HBox styleClass="header-container" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.easycoin.HeaderController">

    <Label text="EasyCoin" styleClass="easycoin-label"/>
    <Region styleClass="flexible-region"/>

    <Label fx:id="accountButton"/>
    <Button text="My Account" styleClass="header-button" onAction="#onAccountButtonClick"/>

    <Label fx:id="settingsButton"/>
    <Button text="My Settings" styleClass="header-button" onAction="#onSettingsButtonClick"/>

    <Label fx:id="logoutButton"/>
    <Button text="Logout" styleClass="header-button" onAction="#onLogoutButtonClick"/>

    <stylesheets>
        <URL value="@../../../style/HeaderStyle.css" />
    </stylesheets>
</HBox>
